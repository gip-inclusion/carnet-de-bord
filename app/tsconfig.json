{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "ES2019",
		"types": [
			"vitest/globals"
		],
		// remove this line when upgrading to sveltekit supporting ts 5.0
		"ignoreDeprecations": "5.0"
	},
	"include": [
		".svelte-kit/ambient.d.ts",
		".svelte-kit/types/**/$types.d.ts",
		"src/app.d.ts",
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.svelte",
		"__tests__/**/*.js",
		"__tests__/**/*.ts",
		"__tests__/**/*.svelte",
		"elm/**/*.d.ts",
		"./setupTest.ts"
	]
}
