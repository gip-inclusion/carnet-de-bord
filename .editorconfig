# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{yml,yaml}]
	indent_style = space
	indent_size = 2

[*.py]
	indent_style = space
	indent_size = 4

[*.{gql,graphql}]
	indent_style = space
	indent_size = 2

[*.elm]
	indent_style = space

[elm.json]
	indent_style = unset
	indent_size = unset

[*.approved.json]
	indent_style = tab
	indent_size = 2
